            };
            ctl_3: ctl_3 {
                label = "ctl_3";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LCTRL>
                    , <&macro_press &kp N3>
                    , <&macro_release &kp LCTRL>;
            };
            ctl_4: ctl_4 {
                label = "ctl_4";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LCTRL>
                    , <&macro_press &kp N4>
                    , <&macro_release &kp LCTRL>;
            };
            ctl_5: ctl_5 {
                label = "ctl_5";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LCTRL>
                    , <&macro_press &kp N5>
                    , <&macro_release &kp LCTRL>;
            };
            shft_1: shft_1 {
                label = "shft_1";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LSHFT>
                    , <&macro_press &kp N1>
                    , <&macro_release &kp LSHFT>;
            };
            shft_2: shft_2 {
                label = "shft_2";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LSHFT>
                    , <&macro_press &kp N2>
                    , <&macro_release &kp LSHFT>;
            };
            shft_3: shft_3 {
                label = "shft_3";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LSHFT>
