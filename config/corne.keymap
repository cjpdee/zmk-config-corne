            ctl_alt_f13: ctl_alt_f13 {
                label = "ctl_alt_f13";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LCTRL>
                    , <&macro_press &kp LALT>
                    , <&macro_press &kp F13>
                    , <&macro_release &kp LALT>
                    , <&macro_release &kp LCTRL>;
            };
            ctl_alt_f14: ctl_alt_f14 {
                label = "ctl_alt_f14";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LCTRL>
                    , <&macro_press &kp LALT>
                    , <&macro_press &kp F14>
                    , <&macro_release &kp LALT>
                    , <&macro_release &kp LCTRL>;
            };
            ctl_alt_f15: ctl_alt_f15 {
                label = "ctl_alt_f15";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
