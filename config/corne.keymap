            alt_f14: alt_f14 {
                label = "alt_f14";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LALT>
                    , <&macro_press &kp F14>
                    , <&macro_release &kp LALT>;
            };
            alt_f15: alt_f15 {
                label = "alt_f15";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LALT>
                    , <&macro_press &kp F15>
                    , <&macro_release &kp LALT>;
            };
            alt_f16: alt_f16 {
                label = "alt_f16";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LALT>
                    , <&macro_press &kp F16>
                    , <&macro_release &kp LALT>;
            };
            alt_f17: alt_f17 {
                label = "alt_f17";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LALT>
                    , <&macro_press &kp F17>
                    , <&macro_release &kp LALT>;
            };
            alt_f18: alt_f18 {
                label = "alt_f18";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_press &kp LALT>
